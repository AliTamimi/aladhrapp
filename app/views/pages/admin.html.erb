    <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.name %></th>
        <td><%= user.email %></th>
        <td><%#= link_to 'Show', edit_user_registration_path %></td>
        <td><%#= link_to 'Edit', edit_user_path(user) %></td>
        <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    </table>
  </div>
